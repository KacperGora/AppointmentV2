{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@components": ["components/"],
      "@views": ["Views/"],
      "@modules": ["modules/"],
      "navigation/*": ["navigation/*"],
      "utils/*": ["utils/*"],
      "assets/*": ["assets/*"],
      "@helpers": ["helpers/"],
      "@types": ["types/"],
      "@navigators": ["navigation/*"],
      "@theme": ["theme/theme.ts"]
    }
  },
  "extends": "expo/tsconfig.base"
}
